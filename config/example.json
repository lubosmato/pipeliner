{
  "custom_steps": "../custom_steps/",
  "pipelines": [
    {
      "name": "Notify me when new blog post is published",
      "schedule": "* * * * *",
      "steps": [
        {
          "class": "HttpDownload",
          "params": {
            "url": "http://www.example.com/",
            "headers": {}
          }
        },
        {
          "class": "GetHtmlElementText",
          "params": {
            "element_xpath": "(//*[@class=\"post-title\"])[1]/a"
          }
        },
        {
          "class": "CompareWithPrevious"
        },
        {
          "class": "SayHello"
        },
        {
          "class": "SayHello"
        }
      ]
    }
  ]
}